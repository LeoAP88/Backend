<h2 style="color:crimson;">Lista de productos</h2>

{{#if hayProductos}}
<div class="table-responsive">
    <table class="table table-dark">
        <tr style="color: yellow;">
            <th>Titulo</th>
            <th>Precio</th>
            <th>Imagen</th>
        </tr>
        {{#each data}}
        <tr>
            <td>
                {{this.Titulo}}
            </td>
            <td>
                {{this.Precio}}
            </td>
            <td>
                <img src="{{this.Imagen}}" alt="{{this.Titulo}}" width="50" height="50" />
            </td>
        </tr>
        {{/each}}
    </table>
</div>
{{else}}
<h3 class="alert alert-danger">No hay productos cargados</h3>
{{/if}}

<button class="btn btn-primary mt-3 mb-5" onclick="location.href='./'">Volver al form</button>